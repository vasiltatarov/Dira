@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@Model.Title</h1>
    <p>@Model.Description</p>
</div>

<div class="row row-cols-1 row-cols-md-5 g-4">
    @foreach (var item in Model.Categories)
    {
        <div class="col">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top card-height card-border p-2" alt="@item.ImageUrl">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="ProductsByCategory" asp-controller="Products" asp-route-categoryId="@item.Id">@item.Name</a>
                    </h5>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
    var link = document.getElementById('home_nav');
    link.classList.add('text-light');
</script>
}